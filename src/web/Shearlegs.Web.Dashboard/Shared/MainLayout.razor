@using Shearlegs.Web.Dashboard.Constants;
@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="ShearlegsTheme.MudTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <Condition Evaluation="_isDarkMode">
            <Match>
                <MudIconButton Icon="@Icons.Material.Outlined.WbSunny" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => EnableLightMode())" />
            </Match>
            <NotMatch>
                <MudIconButton Icon="@Icons.Material.Outlined.Bedtime" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => EnableDarkMode())" />
            </NotMatch>
        </Condition>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/Shearlegs/Shearlegs/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader Class="d-flex align-center">
            <div>
                <MudImage Src="/images/icon.svg" Width="50" Height="50" />
            </div>
            <div class="ms-2">
                <MudText Typo="Typo.h6">Shearlegs</MudText>
            </div>            
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDarkMode;

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void EnableDarkMode()
    {
        _isDarkMode = true;
    }

    void EnableLightMode()
    {
        _isDarkMode = false;
    }
}