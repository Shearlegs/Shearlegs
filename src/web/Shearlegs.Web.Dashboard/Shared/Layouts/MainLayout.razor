@using Shearlegs.Web.Dashboard.Constants;
@using Shearlegs.Web.Dashboard.Shared.Components
@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@isDarkTheme" Theme="ShearlegsTheme.MudTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <Condition Evaluation="userState.IsAuthenticated">
            <Match>
                <MudMenu Size="Size.Large" StartIcon="@Icons.Material.Outlined.Person" 
                    Label="@userState.User.Name" 
                    Color="Color.Inherit" 
                    AnchorOrigin="Origin.BottomCenter"
                    TransformOrigin="Origin.TopCenter"
                    FullWidth="true"
                    >
                    <MudMenuItem Href="/account/settings">
                        Settings
                    </MudMenuItem>
                    <MudMenuItem OnClick="HandleLogout">
                        Log out 
                    </MudMenuItem>
                </MudMenu>
            </Match>
            <NotMatch>
                <MudButton Href="/account/login" StartIcon="@Icons.Material.Outlined.Login" Color="Color.Inherit">
                    Login
                </MudButton>
            </NotMatch>
        </Condition>        
    </MudAppBar>
    <MudDrawer @bind-Open="isDrawerOpen" Elevation="1">
        <MudDrawerHeader Class="d-flex align-center">
            <div>
                <MudImage Src="/images/icon.svg" Width="50" Height="50" />
            </div>
            <div class="ms-2">
                <MudText Typo="Typo.h6">Shearlegs</MudText>
            </div>            
        </MudDrawerHeader>
        <MudDivider />
        <NavMenu />
        <Condition Evaluation="userState.IsAuthenticated">
            <Match>
                <div class="mt-auto">
                    <MudDivider />
                    <div class="pa-4">
                        <MudText Typo="Typo.subtitle2">
                            Session ends in: <Countdown TargetDate="userState.Session.ExpireDate.LocalDateTime" />
                        </MudText>
                    </div>                    
                </div>
            </Match>
        </Condition>
        
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

