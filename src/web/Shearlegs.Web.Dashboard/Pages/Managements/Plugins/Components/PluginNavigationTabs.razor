<MudTabs Elevation="4" ActivePanelIndex="@ActivePanelIndex" Class="mb-5" Color="Color.Primary">
    <MudTabPanel Text="About" OnClick="(() => NavigateTo(string.Empty))" />
    <MudTabPanel Text="Settings" OnClick="@(() => NavigateTo("settings"))" />
    <MudTabPanel Text="Versions" OnClick="@(() => NavigateTo("versions"))" />
</MudTabs>

@code {
    [Parameter]
    public string PluginName { get; set; }
    [Parameter]
    public int ActivePanelIndex { get; set; }

    private void NavigateTo(string key)
    {
        navigationManager.NavigateTo($"/management/plugins/{PluginName}/{key}");
    }
}
