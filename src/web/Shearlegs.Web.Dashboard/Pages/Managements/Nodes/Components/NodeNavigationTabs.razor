<MudTabs Elevation="4" ActivePanelIndex="@ActivePanelIndex" Class="mb-3" Color="Color.Primary">
    <MudTabPanel Text="About" OnClick="(() => NavigateTo(string.Empty))" />
    <MudTabPanel Text="Settings" OnClick="@(() => NavigateTo("settings"))" />
    <MudTabPanel Text="Variables" OnClick="@(() => NavigateTo("variables"))" />
</MudTabs>

@code {
    [Parameter]
    public string NodeName { get; set; }
    [Parameter]
    public int ActivePanelIndex { get; set; }

    private void NavigateTo(string key)
    {
        navigationManager.NavigateTo($"/management/nodes/{NodeName}/{key}");
    }
}
